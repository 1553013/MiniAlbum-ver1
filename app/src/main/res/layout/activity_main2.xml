<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huynhxuankhanh.minialbum.activity.Main2Activity"
    android:background="@color/colorBackGroundPager"
    >


    <com.jsibbold.zoomage.ZoomageView
        android:id="@+id/img_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zoomage_restrictBounds="false"
        app:zoomage_animateOnReset="true"
        app:zoomage_autoResetMode="UNDER"
        app:zoomage_autoCenter="true"
        app:zoomage_zoomable="true"
        app:zoomage_translatable="true"
        app:zoomage_minScale="0.6"
        app:zoomage_maxScale="8"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBackGroundText"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_back"
            android:layout_marginLeft="10dp"
            android:onClick="onClick"
            />
        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/btn_back"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorAccent"
            android:text="Name image here"
            android:gravity="center_vertical"
            />

        <Button
            android:id="@+id/btn_detail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/icon_detail"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:onClick="onClick"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBackGroundText"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        >

        <Button
            android:id="@+id/btn_setscreen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/icon_setscreen"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_favor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/icon_favor"
            android:layout_toLeftOf="@+id/btn_setscreen"
            android:layout_marginRight="30dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/icon_share"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/btn_favor"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/icon_edit"
            android:layout_toRightOf="@+id/btn_setscreen"
            android:layout_marginLeft="30dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/icon_trashcan"
            android:layout_toRightOf="@+id/btn_edit"
            android:layout_marginLeft="30dp"
            android:onClick="onClick"
            />
    </RelativeLayout>

</RelativeLayout>
